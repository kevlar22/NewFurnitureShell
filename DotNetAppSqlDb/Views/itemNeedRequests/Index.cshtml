@model IEnumerable<DotNetAppSqlDb.Models.itemNeedRequests>
@{	Layout = "~/Views/Shared/_Layout.cshtml ";	}
@{	ViewBag.Title = "Index";	}
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <br>
    <p>
        What Items do you Need?
    </p>
    <table cellpadding="4" cellspacing="4">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.minPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.maxPrice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.minPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.maxPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.requestId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.requestId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.requestId })
                </td>
            </tr>
        }

    </table>
    <btn>@Html.ActionLink("Back to Main Menu", "../UserHome/BacktoMenu", @Session["userID"])</btn>
</body>